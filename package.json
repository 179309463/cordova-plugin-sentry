  "cordova": {
    "id": "@sentry/cordova",
    "platforms": [
      "android",
      "ios"
    ]
  },
  "description": "Official Sentry SDK for Cordova",
  "dependencies": {
    "@sentry/browser": "file:/Users/haza/Projects/HazAT/raven-js/packages/browser",
    "@sentry/wizard": "^0.7.3"
  },
  "devDependencies": {
    "@types/cordova": "0.0.34",
    "@types/jest": "^21.1.8",
    "@types/node": "^8.0.53",
    "jest": "^21.2.1",
    "prettier": "^1.7.4",
    "raven-js": "^3.20.1",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.5.3",
    "vrsource-tslint-rules": "^5.8.0"
  },
  "scripts": {
    "clean": "rm -rf ./www/*",
    "dist": "npm run clean && tsc -p tsconfig.json",
    "test": "npm run dist && jest",
    "test:watch": "npm run dist && jest --watch --notify"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePathIgnorePatterns": [],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "\\.d\\.(jsx?|tsx?)$",
      "\\.no-jest\\.(jsx?|tsx?)$"
    ]
  }
}
